}

.triangle-dots {
  position: relative;
  width: 30px;
  height: 26px;
}

.dot {
  position: absolute;
  width: 8px;
  height: 8px;
  background: #FFD700;
}

.dot-1 {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.dot-2 {
  bottom: 0;
  left: 0;
}

.dot-3 {
  bottom: 0;
  right: 0;
  animation-delay: 0.4s;
}

/* Animated dots on hover */
