/* Clean Portrait Gallery */
.portrait-gallery {
  margin-top: 40px;
  padding: 30px 0;
  position: relative;
}

.portrait-gallery h2 {
  text-align: center;
  color: #FFD700;
  font-size: 2.5em;
  margin-bottom: 15px;
}

.portrait-gallery p {
  text-align: center;
  color: #E0E0E0;
  font-size: 1.1em;
  margin-bottom: 40px;
  opacity: 0.9;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  padding: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

.gallery-item {
  position: relative;
  overflow: hidden;
  border-radius: 20px;
  cursor: pointer;
  aspect-ratio: 4 / 3;
  min-height: 250px;
  transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  background: linear-gradient(135deg, rgba(0, 120, 180, 0.3), rgba(0, 150, 200, 0.15));
  backdrop-filter: blur(15px) saturate(1.2);
  border: 2px solid rgba(255, 215, 0, 0.3);
  box-shadow: 
    0 15px 40px rgba(0, 0, 0, 0.5),
    0 0 25px rgba(255, 215, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  transform-style: preserve-3d;
  animation: floatIn 0.8s ease-out;
  animation-fill-mode: both;
}

@keyframes floatIn {
  0% { 
    opacity: 0; 
    transform: translateY(50px) rotateX(10deg); 
  }
  100% { 
    opacity: 1; 
    transform: translateY(0) rotateX(0deg); 
  }
}

.gallery-item img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center center;
  display: block;
}

.gallery-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
}

.gallery-overlay .view-icon {
  font-size: 3.5em;
  color: #FFD700;
}

.gallery-item:hover .gallery-overlay {
  opacity: 1;
}

.gallery-item:hover .gallery-overlay .view-icon {
  opacity: 1;
}

/* Clean Lightbox */
.lightbox {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  opacity: 0;
}

.lightbox.active {
  opacity: 1;
}

.lightbox-content {
  position: relative;
  max-width: 90vw;
  max-height: 90vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lightbox-content img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.lightbox-content img:hover {
  opacity: 1;
}

.lightbox-close {
  position: absolute;
  top: -60px;
  right: -15px;
  color: #FFD700;
  font-size: 45px;
  cursor: pointer;
  z-index: 10001;
  padding: 10px;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lightbox-close:hover {
  color: #FFF;
}

.lightbox-nav {
  position: absolute;
  top: 50%;
  width: 100%;
  display: flex;
  justify-content: space-between;
  pointer-events: none;
  transform: translateY(-50%);
}

.lightbox-prev,
.lightbox-next {
  color: #FFD700;
  border: none;
  font-size: 35px;
  padding: 20px 25px;
  cursor: pointer;
  pointer-events: all;
  position: relative;
}

.lightbox-prev:hover,
.lightbox-next:hover {
  color: #FFF;
}

.lightbox-prev:active,
.lightbox-next:active {
  opacity: 0.8;
}

.lightbox-prev {
  transform: translateX(-30px);
}

.lightbox-next {
  transform: translateX(30px);
}

@keyframes slideInLeft {
  0% { opacity: 0; transform: translateX(-100px); }
  100% { opacity: 1; transform: translateX(-30px); }
}

@keyframes slideInRight {
  0% { opacity: 0; transform: translateX(100px); }
  100% { opacity: 1; transform: translateX(30px); }
}

/* Image Transition Effects */
.lightbox-content img.changing {
  animation: imageSlide 0.5s ease-in-out;
}

@keyframes imageSlide {
  0% { opacity: 1; transform: translateX(0) scale(1); }
  50% { opacity: 0.3; transform: translateX(-20px) scale(0.95); }
  100% { opacity: 1; transform: translateX(0) scale(1); }
}

/* Loading Animation */
.lightbox-content::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60px;
  height: 60px;
  margin: -30px 0 0 -30px;
  border: 4px solid rgba(255, 215, 0, 0.2);
  border-top: 4px solid #FFD700;
  border-radius: 50%;
  animation: lightboxSpin 1s linear infinite;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.lightbox-content.loading::before {
  opacity: 1;
}

@keyframes lightboxSpin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Enhanced Responsive Gallery */
@media (max-width: 768px) {
  .gallery-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
