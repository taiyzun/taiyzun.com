/* Taiyzun.com CSS v=28 - JOURNEY SIMPLIFIED - Single Container - No Section Layers */

/* Global Font Setting */
* {
  font-family: "Trebuchet MS", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Tahoma, sans-serif;
}

html {
  background: none;
  background-color: transparent;
}

/* Full Page Background Video - Always Visible */
.background-video {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  z-index: -1;
  opacity: 1;
  filter: blur(0px) saturate(1.1);
}

/* Mobile Safari Video Fix */
@media (max-width: 768px) {
  .background-video {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    object-fit: cover !important;
    z-index: -1 !important;
    opacity: 1 !important;
    filter: blur(0px) saturate(1.1) !important;
    transform: none !important;
  }
}

.video-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  backdrop-filter: none;
  z-index: -1;
  will-change: opacity;
}

/* NO PARALLAX ANIMATION - SIMPLIFIED */

/* Logo - Top Left Header Position */
.header-logo {
  position: absolute;
  top: 10px;
  left: 20px;
  z-index: 1001;
}

.logo {
  height: 60px;
  width: auto;
  max-width: 50px;
  object-fit: contain;
  object-position: center;
  pointer-events: auto;
}

/* LOGO SIMPLIFIED - NO ANIMATIONS */

/* Responsive logo sizing - Top Left Header */
@media (max-width: 768px) {
  .header-logo {
    top: 8px;
    left: 15px;
  }
  
  .logo {
    height: 50px !important;
    max-width: 45px !important;
    padding: 3px;
  }
}

@media (max-width: 480px) {
  .header-logo {
    top: 5px;
    left: 10px;
  }
  
  .logo {
    height: 45px !important;
    max-width: 40px !important;
    padding: 2px;
  }
}
.socials img, footer.socials img {
  height: 22px;
  width: 22px;
}
.socials, footer.socials {
  position: fixed !important;
  bottom: 15px;
  left: 50% !important;
  right: auto !important;
  transform: translateX(-50%) !important;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  z-index: 10;
  padding: 8px 15px;
  margin: 0 !important;
  width: fit-content;
}

/* Clean Navigation */
nav {
  margin: 5px auto 5px;
  text-align: center;
  padding: 8px 20px;
  display: inline-block;
}

nav:hover {
  transform: translateY(-5px) scale(1.02);
  background: 
    linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.08)),
    radial-gradient(circle at 30% 40%, rgba(255, 215, 0, 0.2), transparent),
    radial-gradient(circle at 70% 60%, rgba(255, 165, 0, 0.15), transparent);
  box-shadow: 
    0 12px 40px rgba(255, 215, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.3),
    inset 0 -1px 0 rgba(255, 215, 0, 0.2);
  border-color: rgba(255, 215, 0, 0.4);
  backdrop-filter: blur(20px) saturate(1.8);
}

nav a {
  margin: 0 4px;
  text-decoration: none;
  font-size: 13px;
  color: #FFFFFF;
  padding: 8px 15px;
}

nav a:hover {
  color: #FFD700;
}

nav a.active {
  color: #FFFFFF;
}

/* Liquid Glass Body and Content - Perfect Vertical & Horizontal Centering */
body {
  background: none;
  background-color: transparent;
  color: #E0E0E0;
  font-family: "Trebuchet MS", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Tahoma, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
  margin: 0;
  padding: 0;
  padding-left: 0;
  padding-top: 120px; /* Space for fixed header */
  padding-bottom: 180px; /* Space for fixed social media and logo */
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


/* Universal Layered Transparency System - Applied to All Pages */

/* Layer 1: Background Video - Fully Visible (All Pages) */
body .background-video {
  opacity: 1;
  filter: blur(0px) saturate(1.1) brightness(1.0);
  z-index: -3;
}

/* Clean Main Container */
main, .content {
  padding: 30px;
  margin: 20px auto;
  max-width: 1200px;
  width: 90%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* Clean Content Blocks */
.main-content,
.journey-content,
.portrait-gallery,
.coming-soon,
.contact-form {
  padding: 20px 25px;
  margin: 15px auto;
  max-width: 1100px;
  width: 95%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* Clean Headers */
h1, h2, h3,
.journey-content h2,
.portrait-gallery h2,
.coming-soon h2,
.contact-form h2 {
  color: #FFFFFF;
  padding: 12px 18px;
  margin: 0 auto 15px auto;
  max-width: fit-content;
}

/* Clean Content */
p, 
.journey-content p,
.main-content p,
.contact-form .form-group {
  padding: 12px 16px;
  margin: 12px auto;
}

/* Clean Gallery Items */
.gallery-item {
  padding: 10px;
  margin: 15px;
}

/* Clean Journey Content */
.journey-content {
  padding: 30px;
  margin: 20px auto;
  max-width: 1200px;
  width: 90%;
}

/* NO ANIMATIONS - SIMPLIFIED DESIGN */
/* All floating and glow animations removed as requested */

/* Universal Styling for Clean Ocean Theme */

main::before, .content::before {
  display: none;
}

/* Clean Hover Effects */
main:hover, .content:hover {
  color: #FFD700;
}

/* Clean Contact Form */
.contact-form {
  padding: 25px;
  margin: 15px 0;
}

.contact-form .form-group {
  margin-bottom: 15px;
}

.contact-form label {
  display: block;
  margin-bottom: 6px;
  color: #FFD700;
  font-size: 14px;
}

.contact-form input,
.contact-form textarea {
  width: 100%;
  padding: 10px 14px;
  color: #FFFFFF;
  font-family: inherit;
  font-size: 14px;
  box-sizing: border-box;
}

.contact-form input:focus,
.contact-form textarea:focus {
  outline: none;
  color: #FFD700;
}

.contact-form textarea {
  min-height: 120px;
  resize: vertical;
}

.contact-form button {
  color: #000;
  border: none;
  padding: 15px 35px;
  font-size: 16px;
  cursor: pointer;
  width: 100%;
  margin-top: 10px;
}

.contact-form button:hover {
  color: #FFD700;
}

.contact-form button:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

.form-status {
  margin-top: 20px;
  padding: 15px;
  text-align: center;
  font-size: 14px;
}

.form-status.success {
  color: #00FF64;
}

.form-status.error {
  color: #FF6B6B;
}

