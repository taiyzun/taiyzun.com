/* Liquid Glass Scroll Effects */
::-webkit-scrollbar {
  width: 12px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  backdrop-filter: blur(20px);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.6), rgba(255, 165, 0, 0.6));
  border-radius: 10px;
  border: 2px solid rgba(255, 255, 255, 0.1);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.8), rgba(255, 165, 0, 0.8));
}

/* Liquid Glass Selection */
::selection {
  background: rgba(255, 215, 0, 0.3);
  color: #FFD700;
}

::-moz-selection {
  background: rgba(255, 215, 0, 0.3);
  color: #FFD700;
}

/* Additional Liquid Glass Micro-interactions */
main:hover::before, .content:hover::before {
  animation-duration: 4s;
}

nav a::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, #FFD700, transparent);
  transition: all 0.4s ease;
  transform: translateX(-50%);
}

nav a:hover::after {
  width: 100%;
}

nav a.active::after {
  width: 100%;
  height: 3px;
  background: linear-gradient(90deg, #FFA500, #FFD700, #FFA500);
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
}

/* Enhanced Mobile Liquid Glass */
@media (max-width: 768px) {
  body::before {
    display: none; /* Hide custom cursor on mobile */
  }
}

